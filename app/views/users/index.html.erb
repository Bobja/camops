<div class="users-new-wrapper text-center">
  <div class="container admin-userList-container">
    <h1>Index</h1>
    <div class="row">
      <div class="col-md-offset-4 col-md-4 col-md-offset-4">
        <% if current_user.admin == true %>
          <%= link_to "カメラマン一覧", admin_users_path, class: 'btn btn-block btn-gray' %>
          <%= link_to "案件一覧", admin_works_path, class: 'btn btn-block btn-gray' %>
          <%= link_to "請求書一覧", "#", class: 'btn btn-block btn-gray' %>
        <% else %>
          <%= link_to "アカウント詳細", "/users/#{current_user.id}", class: 'btn btn-block btn-gray' %>
          <%= link_to "案件一覧", "/works", class: 'btn btn-block btn-gray' %>
          <%= link_to "請求書一覧", "#", class: 'btn btn-block btn-gray' %>
        <% end %>
      </div>
    </div>
  </div>
</div>