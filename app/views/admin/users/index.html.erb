<div class="users-new-wrapper text-center">
  <div class="container admin-userList-container">
    <h1>User List</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>住所</th>
          <th>年齢</th>
          <th>ランク</th>
          <th>詳細</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
          	<td><%= user.name %></td>
          	<td><%= user.address %></td>
          	<td><%= (Date.today.strftime("%Y%m%d").to_i - user.birthday.strftime("%Y%m%d").to_i) / 10000 %></td>
          	<td><%= user.rank %></td>
          	<td><%= link_to '詳細', "/users/#{user.id}", class: 'btn btn-block btn-gray-mini' %></td>
          	<td><%= link_to '編集', "/users/#{user.id}/edit", class: 'btn btn-block btn-gray-mini' %></td>
          	<td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-block btn-gray-mini' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <div class="col-md-offset-4 col-md-4 col-md-offset-4">
        <%= link_to '新規登録', new_admin_user_path, class: 'btn btn-block btn-gray' %>
      </div>
    </div>
  </div>
</div>
    