<div class="users-new-wrapper text-center">
  <div class="container admin-userList-container">
    <h1>Works List</h1>
      <% @works.each do |work| %>
        <% if work.status == "notyet" %>
          <h2 class="work-date">新規案件</h2>
          <table class="table">
            <thead>
              <tr>
                <th>施行日</th>
                <th>案件名</th>
                <th>企業名</th>
                <th>撮影場所</th>
                <th>詳細</th>
                <th>削除</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><%= work.date %></td>
                	<td><%= work.name %></td>
                	<td><%= work.company %></td>
                	<td><%= work.address %></td>
                	<td><%= link_to '詳細', "#", class: 'btn btn-block btn-gray-mini' %></td>
                	<td><%= link_to '削除', admin_work_path(work.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-block btn-gray-mini' %></td>
                </tr>
            </tbody>
          </table>
        <% end %>

        <% if work.status == "requesting" %>
          <h2 class="work-date">依頼中案件</h2>
          <table class="table">
            <thead>
              <tr>
                <th>施行日</th>
                <th>案件名</th>
                <th>企業名</th>
                <th>撮影場所</th>
                <th>詳細</th>
                <th>削除</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><%= work.date %></td>
                	<td><%= work.name %></td>
                	<td><%= work.company %></td>
                	<td><%= work.address %></td>
                	<td><%= link_to '詳細', "#", class: 'btn btn-block btn-gray-mini' %></td>
                	<td><%= link_to '削除', admin_work_path(work.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-block btn-gray-mini' %></td>
                </tr>
            </tbody>
          </table>
        <% end %>

        <% if work.status == "submitted" %>
          <h2 class="work-date">依頼済み案件</h2>
          <table class="table">
            <thead>
              <tr>
                <th>施行日</th>
                <th>案件名</th>
                <th>企業名</th>
                <th>撮影場所</th>
                <th>詳細</th>
                <th>削除</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><%= work.date %></td>
                	<td><%= work.name %></td>
                	<td><%= work.company %></td>
                	<td><%= work.address %></td>
                	<td><%= link_to '詳細', "#", class: 'btn btn-block btn-gray-mini' %></td>
                	<td><%= link_to '削除', admin_work_path(work.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-block btn-gray-mini' %></td>
                </tr>
            </tbody>
          </table>
        <% end %>

        <% if work.status == "completed" %>
          <h2 class="work-date">終了案件</h2>
          <table class="table">
            <thead>
              <tr>
                <th>施行日</th>
                <th>案件名</th>
                <th>企業名</th>
                <th>撮影場所</th>
                <th>詳細</th>
                <th>削除</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><%= work.date %></td>
                	<td><%= work.name %></td>
                	<td><%= work.company %></td>
                	<td><%= work.address %></td>
                	<td><%= link_to '詳細', "#", class: 'btn btn-block btn-gray-mini' %></td>
                	<td><%= link_to '削除', admin_work_path(work.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-block btn-gray-mini' %></td>
                </tr>
            </tbody>
          </table>
        <% end %>
      <% end %>        

    <div class="row">
      <div class="col-md-offset-4 col-md-4 col-md-offset-4">
        <%= link_to '新規登録', new_admin_work_path, class: 'btn btn-block btn-gray' %>
      </div>
    </div>
  </div>
</div>
    